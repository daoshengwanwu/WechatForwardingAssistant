<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_float_window_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_float_window_root"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="top|end">

        <TextView
            android:id="@+id/tv_alert"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:text="请到微信开始获取界面特征"/>

        <View
            android:id="@+id/view_split_line"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_below="@id/tv_alert"
            android:background="#FFF" />

        <TextView
            android:id="@+id/tv_btn"
            android:layout_below="@+id/view_split_line"
            android:layout_width="180dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#FFF"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="截取"/>
    </RelativeLayout>
</FrameLayout>
